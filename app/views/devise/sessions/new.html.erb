<h2 class="text-maroon px-3 ubuntu-font text-center pt-2 mt-2">Sign In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="d-flex flex-row flex-wrap justify-content-center pt-2 mt-2">
    <div class="card m-3 shadow d-flex flex-column justify-content-between bg-light border-0" style="width: 25rem;">

      <div class="card-body d-flex flex-column justify-content-between">

        <div class="field">
          
          <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "text-center form-control mb-2" %>
        </div>

        <div class="field">
          
          <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "text-center form-control mb-2" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field text-center mb-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-success shadow w-100" %>
        </div>

        <%= render "devise/shared/links" %>
    
      </div>
    </div>
  </div>
<% end %>


