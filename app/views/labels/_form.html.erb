<%= form_for @label do |t| %>

<div>
   <% if @label.errors.any? %>

      <div class="d-flex flex-wrap justify-content-center fixed-bottom m-5">      
            <% @label.errors.full_messages.each do |message| %>
               <div class="alert alert-danger m-3 " role="alert"><%= message %></div>
            <% end %>
      </div>
   <% end %>
</div>

<div class="d-flex flex-row flex-wrap justify-content-center pt-2 mt-2">

   <div class="card m-3 shadow d-flex flex-column justify-content-between bg-warning border-0" style="width: 50rem;">

      <div class="card-body d-flex flex-column justify-content-between">
         <%= t.text_field :label_name, placeholder: "Label Name", class: "text-center form-control mb-2" %>
         <br>
         <%= t.text_field :label_details, placeholder: "Label Details", class: "text-center form-control mb-2" %>
         <br>
         <%= t.number_field :user_id, id: :label_user_id, class: 'form-control', value: current_user.id, type: :hidden %>
      </div>
      
      <div class="d-flex flex-row justify-content-center m-3">
      
         <%= link_to 'Cancel', tasks_path, class: "btn btn-danger mx-3 shadow text-decoration-none text-white " %>

         <%= t.submit 'Create Label', class: "btn btn-success mx-3 shadow" %>
      
      </div>
   
   </div>

</div>

<% end %>