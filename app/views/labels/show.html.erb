<div class="d-flex flex-column flex-wrap justify-content-center align-items-center pt-2 mt-2 off-white">

      <div class="card m-3 shadow d-flex flex-column justify-content-between border-0 bg-warning" style="width: 75vw;">

            <%= link_to edit_label_path(@label), class: "text-decoration-none link-dark" do %>
                  <div class="card-body d-flex flex-column justify-content-between text-center">
                  <h4 class="card-title ubuntu-font text-maroon border-warning"><%= @label.label_name %></h4>
                  <div class="card-text text-center border-0 bg-warning" style="height: auto; overflow-x: hidden;">
                        <%= @label.label_details.empty? ? 'No Details' : @label.label_details %> 
                  </div>
                  </div>
            <%end%>
         
         <div class="d-flex flex-row justify-content-end m-3 align-items-center">
            <small class="text-muted mx-2">Label Created: <%= @label.created_at.utc.localtime.strftime('%d %b %Y %I:%M %p') %></small>
               <button type="button" class="btn btn-outline-primary border-0"><%= link_to '⬅️', labels_path, class: "text-decoration-none text-white" %></button>
               <button type="button" class="btn btn-outline-success mx-2 border-0"><%= link_to '✏️', edit_label_path(@label), class: "text-decoration-none text-white" %></button>
               <button type="button" class="btn btn-outline-danger border-0"><%= link_to '❌', label_path(@label), method: :delete, data: {confirm: 'Delete chosen article PERMANENTLY?'}, class: "text-decoration-none text-white" %></button>
         </div>
      
      </div>

      <div class="m-2 d-flex flex-column justify-content-between align-items-center off-white border-0" style="width: 75vw;">
        
            <h6 class="card-title ubuntu-font text-maroon border-warning">
                  <%= @label.tasks.empty? ? 'No Tasks with this Label' : @label.tasks.count.to_s + " Task/s Labeled" %> 📝
            </h6>

            <div class="card-body d-flex flex-row flex-wrap justify-content-center align-items-center text-center p-0">
            
                  
                  <% @label.tasks.reverse_each do |t| %>
                        
                        <%= link_to task_path(t), class: "text-decoration-none link-dark" do %>

                        <div class="card m-3 shadow d-flex flex-column justify-content-between bg-light border-0 shake" style="width: 15rem;">
                              <div class="card-body d-flex flex-column justify-content-between text-center">
                              <h4 class="card-title ubuntu-font text-maroon border-warning"><%= t.task_name[0, 15]... %></h4>
                              <p class="card-text text-muted"> Open to see details</p> 
                              </div>
                        </div>

                        <%end%>

                  <% end %>

            </div>
      </div>

</div>