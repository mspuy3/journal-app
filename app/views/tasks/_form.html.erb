<%= form_for @task do |t| %>

<div>
   <% if @task.errors.any? %>

      <div class="d-flex flex-wrap justify-content-center fixed-bottom m-5">      
            <% @task.errors.full_messages.each do |message| %>
               <div class="alert alert-danger m-3 " role="alert"><%= message %></div>
            <% end %>
      </div>
   <% end %>
</div>

<div class="d-flex flex-row flex-wrap justify-content-center pt-2 mt-2">

   <div class="card m-3 shadow d-flex flex-column justify-content-between bg-light border-0" style="width: 50rem;">

      
      <div class="card-body d-flex flex-column justify-content-between">
         <%= t.number_field :user_id, id: :task_user_id, class: 'form-control', value: current_user.id, type: :hidden %>
         <%= t.hidden_field :task_done, :value => 0 %>
         
         <%= t.text_field :task_name, placeholder: "Task Name", class: "text-center form-control mb-2" %>
         <br>
         <%= t.rich_text_area :task_details, placeholder: "Task Details", class: "form-control mb-2" %>
         <br>

         
         <%= t.datetime_local_field :task_deadline, class: "text-center form-control" %>
      
      </div>
      
      <div class="d-flex flex-row justify-content-center align-items-center m-3">

         <button class="btn dropdown">

            <a class="nav-link dropdown-toggle text-danger btn-warning rounded shadow text-decoration-none" href="#" id="labelDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
               <span class="text-maroon ubuntu-font"> Labels </span>
            </a>

            <div class="dropdown-menu p-2 shadow bg-light" style="height: auto; max-width: 25vw" aria-labelledby="labelDropdown">
               <div class="form-check form-switch d-flex flex-row flex-wrap bg-light">   
                  <%= t.collection_check_boxes(:label_ids, Label.all, :id, :label_name) do |l| %>
                        <% if l.object.user_id == current_user.id %>
                           <%= l.label class:"" do %>
                              <div class="" style="width: 15vw">
                                 <%= l.check_box class: 'form-check-input bg-warning border-0' %> 
                                 <%= l.label class: 'form-check-label ubuntu-font text-maroon'%>
                              </div>
                           <%end%>
                        <%end%>
                  <% end %>
               </div>
            </div>

         </button>
      
         <%= link_to 'Cancel', tasks_path, class: "btn btn-danger mx-3 shadow text-decoration-none text-white" %>

         <%= t.submit 'Create Task', class: "btn btn-success mx-3 shadow" %>
      
      </div>
   
   </div>

</div>

<% end %>