<%= render "new-button" %>

<h2 class="text-maroon px-3 ubuntu-font text-center pt-2 mt-2">All Tasks</h2>

<div class="d-flex flex-row flex-wrap justify-content-center pt-1 mt-1 off-white">

   <% @tasks.reverse_each do |task| %>

         <div class="bg-light border-0 card m-4 shadow d-flex flex-column justify-content-between shake" style="width: 18rem; height: auto;">

            <%= link_to task_path(task), class: "text-decoration-none link-dark" do %>
               <div class="card-body d-flex flex-column justify-content-between" style="height: 10rem;">
                  <h4 class="card-title border-bottom border-warning pb-1 ubuntu-font text-maroon"><%= task.task_name[0, 15]... %></h4>


                  <div class="d-flex flex-row flex-wrap justify-content-start align-items-center">
                        <button class="maroon p-1 m-1 rounded text-light btn-sm border-0 font-weight-bold">Deadline: <%= task.task_deadline ? task.task_deadline.strftime('%d %b %Y %I:%M %p') : 'None' %> </button>
                        
                        <button class="maroon p-1 m-1 rounded text-light btn-sm border-0 font-weight-bold">
                              <%= task.task_done ? 'Task is done! 😁' : 'Not yet done. 🤡' %> 
                        </button>
                  </div>


                  <p class="card-text m-3 text-center">Open to see details</p>

               </div>
            
            <% end %>
            
            <div class='m-3 d-flex flex-wrap mt-4'> 
               <% task.labels.reverse_each do |l| %>
                  <%= link_to label_path(l), class: "text-decoration-none link-dark" do %>
                     <button class="bg-warning p-1 m-1 rounded text-maroon btn-sm border-0"> <%= l.label_name[0, 15] %> </button>
                  <%end%>
               <%end%>
            </div>

            <div class="d-flex flex-row justify-content-end align-items-center m-3">
            <small class="text-muted">(<%= task.created_at.strftime('%d %b %Y %I:%M %p') %>)</small>
                  <button type="button" class="btn btn-outline-success btn-sm mx-0 border-0"><%= link_to '✏️', edit_task_path(task), class: "text-decoration-none text-white" %></button>
                  <button type="button" class="btn btn-outline-danger btn-sm border-0"><%= link_to '❌', task_path(task), method: :delete, data: {confirm: 'Delete chosen blog PERMANENTLY?'}, class: "text-decoration-none text-white" %></button>
            </div>

         </div>

   <% end %>

</div>
