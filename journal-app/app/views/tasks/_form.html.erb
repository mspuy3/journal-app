<%= form_for @task do |t| %>

<div>
   <% if @task.errors.any? %>

      <div class="d-flex flex-wrap justify-content-center fixed-bottom m-5">      
            <% @task.errors.full_messages.each do |message| %>
               <div class="alert alert-danger m-3 " role="alert"><%= message %></div>
            <% end %>
      </div>
   <% end %>
</div>

<div class="d-flex flex-row flex-wrap justify-content-center pt-5 mt-5">

   <div class="card m-3 shadow d-flex flex-column justify-content-between bg-light border-0" style="width: 50rem;">

      
      <div class="card-body d-flex flex-column justify-content-between">
         <%= t.text_field :task_name, placeholder: "Task Name", class: "text-center form-control mb-2" %>
         <br>
         <%= t.text_area :task_details, placeholder: "Task Details", class: "text-center form-control mb-2" %>
         <br>
         <%= t.datetime_local_field :task_deadline, placeholder: "Task Deadlines", class: "text-center form-control mb-2" %>
         <%= t.hidden_field :task_done, :value => 0 %>

         <p>Choose Label:</p>
         

         <%# <div class="btn-group">
            <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Choose Label/s
            </button> %>
               <div class="form-check form-switch d-flex">
                  <%# <%= t.collection_check_boxes :label_ids, Label.all, :id, :label_name %>
                  <%= t.collection_check_boxes(:label_ids, Label.all, :id, :label_name) do |l| %>
                     <%= l.label class:"dropdown-item" do %>
                        <div>
                        <%= l.check_box class: 'form-check-input bg-warning border-0'%> <%= l.label class: 'form-check-label rounded'%>
                        </div>
                     <%end%>
                  <% end %>
               </div>
         <%# </div> %>

      </div>
      
      <div class="d-flex flex-row justify-content-center m-3">
      
         <%= link_to 'Cancel', tasks_path, class: "btn btn-danger mx-3 shadow text-decoration-none text-white " %>

         <%= t.submit 'Take Note', class: "btn btn-success mx-3 shadow" %>
      
      </div>
   
   </div>

</div>

<% end %>